{
    "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on",
                "useSortedAttributes": "off",
                "useSortedKeys": "on",
                "useSortedProperties": "on"
            }
        },
        "enabled": true
    },
    "css": {
        "parser": {
            "tailwindDirectives": true
        }
    },
    "files": {
        "ignoreUnknown": true,
        "includes": ["**", "!**/package.json", "!**/dist", "!**/logs", "!**/node_modules", "!**/.next"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded",
            "quoteStyle": "single",
            "semicolons": "asNeeded",
            "trailingCommas": "all"
        },
        "globals": ["afterAll", "afterEach", "beforeAll", "beforeEach", "describe", "expect", "it", "jest", "test"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "complexity": {
                "noImportantStyles": "off"
            },
            "recommended": true,
            "suspicious": {
                "noArrayIndexKey": "error"
            }
        }
    },
    "vcs": {
        "clientKind": "git",
        "enabled": false,
        "useIgnoreFile": false
    }
}
